[user]
  name = averted
  email = email

[core]
  editor = vim
  quotepath = false
  # http://stackoverflow.com/questions/136178/git-diff-handling-long-lines
  pager = less -r

[mergetool]
  keepBackup = true

[push]
  default = simple # [ matching | simple ]

[color]
  ui = auto
  interactive = auto

[diff "exif"]
  textconv = exif

[alias]
  find = grep --break
  s = status
  d = diff
  co = checkout
  ck = checkout
  out = checkout
  cp = cherry-pick
  l = log --color --graph --pretty=format:'%C(bold red)%h%Creset -%C(bold green)%d%Creset %s %C(bold blue)(%cr)%Creset %C(bold yellow)<%an>%Creset' --abbrev-commit --date=relative
  lp = log -p --color --graph --pretty=format:'%C(bold red)%h%Creset -%C(bold green)%d%Creset %s %C(bold blue)(%cr)%Creset %C(bold yellow)<%an>%Creset' --abbrev-commit --date=relative
  sl = shortlog -sn
  llg = log --color --graph --pretty=format:'%C(bold white)%H %d%Creset%n%s%n%+b%C(bold blue)%an <%ae>%Creset %C(bold green)%cr (%ci)' --abbrev-commit
  purge = !git branch --merged | grep -v '\\*' | grep -v 'master' | xargs -n 1 git branch -d
  alias = !git config --list | grep 'alias\\.' | sed 's/alias\\.\\([^=]*\\)=\\(.*\\)/\\1\\\t => \\2/' | sort
  stat = log --color --graph --pretty=format:'%C(bold red)%h%Creset -%C(bold green)%d%Creset %s %C(bold blue)(%cr)%Creset %C(bold yellow)<%an>%Creset' --abbrev-commit --date=relative --stat
  stat-yd = log --color --graph --pretty=format:'%C(bold red)%h%Creset -%C(bold green)%d%Creset %s %C(bold blue)(%cr)%Creset %C(bold yellow)<%an>%Creset' --abbrev-commit --date=relative --stat --since=yesterday
  stat-6am = log --color --graph --pretty=format:'%C(bold red)%h%Creset -%C(bold green)%d%Creset %s %C(bold blue)(%cr)%Creset %C(bold yellow)<%an>%Creset' --abbrev-commit --date=relative --stat --since=6am
